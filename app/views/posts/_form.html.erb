<%= form_for @post do |f|%>
    <%= f.label :title%>
    <%= f.text_field :title %> <br>
    <br>
    <%= f.label :content %>
    <%= f.text_area :content %>
    <fieldset>
        <legend><h4><%= f.label :category_ids, "Select Post Categories" %></h4></legend>
        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
    </fieldset>
    <fieldset>
        <legend><h4> Create a New Post Category </h4></legend>
        <%= f.fields_for :categories, @post.categories.build do |categories_fields| %>
            <%= categories_fields.label :name %>
            <%= categories_fields.text_field :name %>
        <% end %>
    </fieldset>
    <%= f.submit %>
<% end %>
